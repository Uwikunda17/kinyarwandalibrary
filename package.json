{
  "name": "ikinyarwanda-lang",
  "version": "1.1.0",
  "description": "A Kinyarwanda scripting language interpreter for web applications.",
  "type": "module",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "ikin": "./bin/ikin.js"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "files": [
    "src",
    "bin",
    "types",
    "examples",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "kinyarwanda",
    "language",
    "interpreter",
    "cli",
    "typescript",
    "web"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "ikw": "node ./bin/ikin.js",
    "ikw:run": "node ./bin/ikin.js run",
    "ikw:serve": "node ./bin/ikin.js serve",
    "server": "node ./server.cjs",
    "start": "node ./server.cjs",
    "test": "node --test ./tests/interpreter.test.mjs",
    "smoke": "node ./bin/ikin.js run ./examples/hello.ikw",
    "typecheck": "tsc -p tsconfig.json",
    "verify": "npm run test && npm run smoke && npm run typecheck",
    "prepublishOnly": "npm run verify"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
